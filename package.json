    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@zkpassport/sdk": "0.8.3",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "typescript": "^5.0.0"
  },
  "type": "module"
}